<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    tools:context="br.com.rocheikoaresalfabooks.alfabooks.Activities.CarrinhoActivity">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/carrinho_rcyclview"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="400dp">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/continuar_comprando_car_btn"
            style="@style/MaterialButton.ButtonNoBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continuar_comprando_car_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/finalizar_compra_cart_btn"
            style="@style/MaterialButton.ButtonNoBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/finalizar_compra_cart_btn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


    </LinearLayout>


</LinearLayout>
